properties:
  file.ctime:
    displayName: created
  file.mtime:
    displayName: updated
views:
  - type: table
    name: Table
    filters:
      and:
        - file.ext == "md"
        - file.path.startsWith("product_list")
        - '!file.name.startsWith("Campaign")'
        - file.path.contains("scripts")
    order:
      - file.name
      - product
      - caption
      - published
      - duration
      - sales
      - tags
      - link
      - source_notes
    sort:
      - property: published
        direction: DESC
      - property: file.name
        direction: ASC
    columnSize:
      file.name: 320
      note.product: 176
      note.caption: 182
      note.published: 120
      note.duration: 90
      note.sales: 80
      note.tags: 320
      note.link: 260
      note.source_notes: 360
  - type: cards
    name: View
